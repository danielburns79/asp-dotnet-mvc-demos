                {
                    console.log("totalLineWidth: this="+element.attr('id')+" "+element.attr('class')+", break");
                    return false; // break out of elements.each
                }
            });
            console.log("totalLineWidth: this="+elements.attr('id')+" "+elements.attr('class')+", width=" + total);
            return total;
