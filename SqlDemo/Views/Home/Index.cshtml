        function maxWidth(elements)
        {
            var max = 0;
            elements.each(function() {
                var width = $(this).getWidth();
                if (width > max)
                {
                    max = width;
                }
            });
            return max;
        }
        function totalLineWidth(elements)
        {
            var total = 0;
            elements.each(function() {
                var element = $(this);
                var children = element.children();
                if (children.length)
                {
                    total += totalLineWidth(children);
                    console.log("totalLineWidth: this="+element.attr('id')+" "+element.attr('class')+"(total += totalLineWidth(children))="+total);
                }
